                <artifactId>maven-pmd-plugin</artifactId>
                <version>3.14.0</version>
                <configuration>
                    <targetJdk>1.8</targetJdk>
                    <rulesets>
                        <ruleset>${maven.multiModuleProjectDirectory}/ruleset.xml</ruleset>
                    </rulesets>
                </configuration>
